<%= form_with(model: tarea, local: true,class:"form") do |form| %>
  <% if tarea.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(tarea.errors.count, "error") %> prohibited this tarea from being saved:</h2>

      <ul>
      <% tarea.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :nombre,:class => "col-sm-2 col-form-label" %>
    <%= form.text_field :nombre, id: :tarea_nombre,:class =>"col-sm-10 form-control" %>
  </div>

  <div class="form-group row">
    <%= form.label :user_id ,:class => "col-sm-2 col-form-label"%>
    <%= form.collection_select :user_id, User.all, :id, :username,{prompt:true,autofocus: true ,class:"col-sm-10 form-control"},class:"col-sm-10 form-control"%>

  </div>

  <div class="form-group row">
    <%= form.label :categoria_id ,:class => "col-sm-2 col-form-label"%>
      <%= form.collection_select :categoria_id, Categoria.all, :id, :nombre,{prompt:true,autofocus: true ,class:"col-sm-10 form-control"},class:"col-sm-10 form-control"%>
    </div>

  <div class="form-group row">
    <%= form.label :fecha_asignacion,:class => "col-sm-4 col-form-label" %>
    <%= form.date_select :fecha_asignacion, id: :tarea_fecha_asignacion,:class =>"col-sm-8 form-control" %>
  </div>
  <br/>
  <div class="form-group row">
    <%= form.label :fecha_fin ,:class => "col-sm-4 col-form-label"%>
    <%= form.date_select :fecha_fin, id: :tarea_fecha_fin ,:class =>"col-sm-8 form-control"%>
  </div>
  <div class="form-group row">
    <%= form.label :proyecto_id ,:class => "col-sm-2 col-form-label"%>
    <%= form.collection_select :proyecto_id, Proyecto.all, :id, :nombre,{prompt:true,autofocus: true ,class:"col-sm-10 form-control"},class:"form-control"%>
  </div>
    <div class="form-group row">
      <%= form.label :estado_id ,:class => "col-sm-2 col-form-label"%>
      <%= form.collection_select :estado_id, Estado.all, :id, :estado,{class:"col-sm-10 form-control"},class:"col-sm-10 form-control"%>
    </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
