<p id="notice"><%= notice %></p>

<h1>Tareas</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>User</th>
      <th>Categoria</th>
      <th>Estado</th>
      <th>Fecha asignacion</th>
      <th>Fecha inicio</th>
      <th>Fecha fin</th>
      <th>Fecha fin real</th>
      <th>Proyecto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tareas.each do |tarea| %>
      <tr>
        <td><%= tarea.nombre %></td>
        <td><%= tarea.user %></td>
        <td><%= tarea.categoria %></td>
        <td><%= tarea.estado %></td>
        <td><%= tarea.fecha_asignacion %></td>
        <td><%= tarea.fecha_inicio %></td>
        <td><%= tarea.fecha_fin %></td>
        <td><%= tarea.fecha_fin_real %></td>
        <td><%= tarea.proyecto %></td>
        <td><%= link_to 'Show', tarea %></td>
        <td><%= link_to 'Edit', edit_tarea_path(tarea) %></td>
        <td><%= link_to 'Destroy', tarea, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

