<!DOCTYPE html>
<html>
<head>
  <title>Prolam</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<% if !current_user.nil? %>
    <header>
      <%= render 'layouts/navigation' %>
    </header>
 <% end %>
<div class="container-fluid">
<div class="row ">
  <% if !current_user.nil? %>
      <nav class="col-sm-3 col-md-2 d-none d-sm-block bg-light sidebar">
              <ul class="nav nav-pills flex-column">

                <li class="nav-item">
                  <div class="row">
                  <div id="userimgpre" class="avatar_menu ">
                    <%= avatar_menu(current_user, "img_prev") %>
                  </div>
                  <div class="col-md-9">
                    Biembenido:<br/>
                  <a href="#" class="">
                    <%= current_user.email %>
                  </a>
                  </div>
                  </div>
                </li>
                <li class="nav-item">
                  <%= link_to 'Mi Perfil', edit_user_path(current_user),:class => "nav-link #{active_class(edit_user_path(current_user))}"%>
                </li>
                <li class="nav-item">
                  <a href="/" class="nav-link <%= active_class("/")%>">Mis tareas</a>
                </li>
                <li class="nav-item">
                  <%= link_to "Tareas de todos",tareas_path,:class => "nav-link #{active_class(tareas_path)}" %>
                </li>
                <li class="nav-item">
                  <%= link_to ' Cerrar sesiÃ³n'.html_safe, destroy_user_session_path, method: :delete,:class => "nav-link" %>
                </li>

                <% if current_user.is_colaborador? %>
                    <li class="nav-item"><a href="/home/index" class="nav-link"> Link unico de colaborador</a></li>
                <% end %>
                <% if current_user.is_admin? %>
                    <li class="nav-item"><a href="/admin/users/IMPLEMENTAR" class="nav-link">Link unico de admin</a></li>
                <% end %>
              </ul>
      </nav>
  <% end %>
  <div class="col-sm-9 col-md-10 pt-3 ml-sm-auto ml-md-auto ml-auto"  role="main">
    <section id="content">
      <!--<div class="container">-->
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
        <%= yield %>
      <!--</div>-->
    </section>
  </div>
</div>
</div>
</body>
</html>
